const Discord = require('discord.js');
const client = new Discord.Client(NzY5MjY0NzU3NTYyODAyMTg2.X5Mfog.Q1gwdOfdYAh9f_4rCgXX9qq_0J0);

// 'client.on('message')' commands are triggered when the
// specified message is read in a text channel that the bot is in.

client.on('message', message => {
  if (message.content === 'mhelp') {
    message.reply('Hello Mortal! a little creature scurried by and told me you needed help! ');
  }
});

client.login("MzkzMzk4ODgwODk4OTA4MTYx.DR1QLg.ZfGt8hIl3zNlBj4WDvMGVlVZrhk");
